{
  "compilerOptions": {
    "moduleResolution": "node",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "outDir": "dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
  },
  "exclude": [
    "node_modules", "./dist", "tests", "rm-dist.js"
  ]
}
